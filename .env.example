# Neo4j AuraDB connection
NEO4J_URI=neo4j+s://xxxxxxxx.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-password-here

# Ed25519 signing key (Base64url-encoded 32-byte seed)
# Generate with: pnpm keys
# Leave empty in dev â€” a keypair will be auto-generated to .dev-keys.json
MOLTBRIDGE_AGENT_ID=moltbridge-server
MOLTBRIDGE_SIGNING_KEY=

# Server
PORT=3040

# Deployment
MOLTBRIDGE_HOSTNAME=api.moltbridge.ai

# Smart Contract (Base L2)
# DEPLOYER_PRIVATE_KEY=    # Wallet private key for contract deployment
# PLATFORM_WALLET=         # Platform revenue wallet address
# MOLTBRIDGE_SPLITTER_ADDRESS=  # After deployment, set this to the contract address
# BASE_SEPOLIA_RPC=https://sepolia.base.org
